<% provide :title, t("title.password_forgot") %>
<% provide :base_title, t("base.title") %>
<div class="col-6">
  <h2 class="text-center text-primary text-uppercase"><%= t "title.password_forgot" %></h2>
  <%= form_for(:password_reset, url: password_resets_path) do |f| %>
    <div class="field mt-3">
      <%= f.label :email%><br />
      <%= f.email_field :email %>
    </div>
    <div class="actions mt-3">
      <%= f.submit t("form.password_reset.submit"), class: "btn btn-success" %>
    </div>
  <% end %>
</div>
