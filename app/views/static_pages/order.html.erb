<% provide :title, t("booking.booking_fields") %>
<% provide :base_title, t("base.title") %>
<div class="col-lg-9 box-booking">
  <div class="head">
    <h3>Đặt sân</h3>
  </div>
  <div class="content">
    <table class="table-booking">
      <thead>
        <tr>
          <th scope="col"></th>
          <th scope="col"></th>
          <th scope="col"> <%= t "booking.fields_name" %> </th>
          <th scope="col"> <%= t "booking.fields_code" %> </th>
          <th scope="col"> <%= t "booking.fields_type" %> </th>
          <th scope="col"> <%= t "booking.time" %></th>
          <th scope="col"> <%= t "booking.date" %></th>
          <th scope="col"> <%= t "booking.price" %></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="row">
            <span> booking_delete </span>
          </th>
          <td>
            <div class="box-img">
              <img src="/assets/noimage.jpeg" alt="Not img">
            </div>
          </td>
          <td> <%= t "booking.fields_name" %> A </td>
          <td> JAVA </td>
          <td> 5 </td>
          <td> 17:00 </td>
          <td> 10/11/2020 </td>
          <td> 10$ </td>
        </tr>
        <tr>
          <th scope="row">
            <span> booking_delete </span>
          </th>
          <td>
            <div class="box-img">
              <img src="/assets/noimage.jpeg" alt="Not img">
            </div>
          </td>
          <td> <%= t "booking.fields_name" %> B</td>
          <td> Ruby </td>
          <td> 5 </td>
          <td> 17:00 </td>
          <td> 10/11/2020 </td>
          <td> 10$ </td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="footer-booking">
    <div class="total">
      <p><b> <%= t "booking.total_cost" %> : </b><span> 20$ </span></p>
    </div>
    <div class="booking">
      <button type="button" class="btn btn-primary mr-3"><%= t "booking.booking_fields" %></button>
      <button type="button" class="btn btn-secondary"> <%= t "booking.cancel_fields" %> </button>
    </div>
  </div>
</div>
