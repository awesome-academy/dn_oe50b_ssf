<% provide :title, t(".title") %>
<div class="col-lg-9">
 <div class="container">
  <div class="row">
   <div class="col-md-6 col-md-offset-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2 class="font-weight-bold"><%= t ".title" %></h2>
      </div>
      <div class="panel-body">
        <%= form_for(:session, url: login_path) do |f| %>
          <fieldset>
            <div class="form-group">
              <%= f.label :email, t(".email"), class: "font-weight-bold" %>
              <%= f.email_field :email, class: "form-control", placeholder: t(".email") %>
            </div>
            <div class="form-group">
              <%= f.label :password, t(".password"), class: "font-weight-bold" %>
              <%= link_to t(".forgot_password"), new_password_reset_path %>
              <%= f.password_field :password, class: "form-control", placeholder: t(".password") %>
            </div>
            <div class="checkbox">
              <label>
                <%= f.label :remember_me, class: "checkbox inline" do %>
                  <%= f.check_box :remember_me %>
                  <%= raw t ".remember" %>
                <% end %>
              </label>
           </div>
           <%= f.submit t(".login"), class: "btn btn-lg btn-success btn-block font-weight-bold" %>
           <p class="font-weight-bold" > <%= t ".new_user" %> <%= link_to t(".sign_up_now"), signup_path %></p>
          </fieldset>
        <% end %>
        <hr/>
        <center><h4><% t ".or" %></h4></center>
        <p><%= link_to fa_icon("facebook", text: t(".facebook")), "#", class: "btn btn-primary" %>
        </p><%= link_to fa_icon("google", text: t(".google")), "#",class: "btn btn-danger" %><p></p>
      </div>
    </div>
   </div>
  </div>
 </div>
</div>

